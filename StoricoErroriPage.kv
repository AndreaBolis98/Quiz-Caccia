<StoricoErrori>:
    name: 'storico'
    canvas:
        Color:
            rgba: .95,.92,.85,1
        Rectangle:
            pos: self.pos
            size: self.size

    MDLabel:
        id: indice_errori
        font_size: self.height/2
        font_name: 'font/myriadpro-bold.otf'
        halign: 'center'

        pos_hint: {'center_x':.5,'top':.98}
        size_hint:.9,.07
        color: .99,.43,.23,1
        bold: True
    ScrollView:
        pos_hint: {'center_x':.5,'y':.11}
        size_hint: 1,.80
        do_scroll_x: False
        BoxLayout:

            spacing: "12dp"
            id: error_armi_list
            orientation: 'vertical'
            size_hint_y: None
            height: self.minimum_height
    MDCard:
        md_bg_color: .427,.498,.412,0
        elevation:0
        size_hint:.3,.3
        pos_hint:{'x':0,'center_y':0.05}
        on_release:
            app.root.current='personale'
            app.root.transition.direction= 'left'

        Image:
            source: 'icone/SX.png'
            allow_stretch: True
            keep_ratio: True
            size: self.size
            pos: self.pos


<ErrorCard>

    cols:1
    radius: [12,12,12,12]
    pos_hint:{'center_x': .5, 'center_y': .5}
    size_hint:.9,None
    height: self.width/1.2
    domanda: ''
    corretta: ''
    risposta: ''

    MDLabel:
        halign: 'center'
        text: root.domanda
        font_size: self.width/17
        font_name: 'font/myriadpro-bold.otf'
        color:.2,.3,.23,1
        size_hint:1,.38
        pos_hint: {'x':0, 'y':0}
    MDLabel:
        text: root.corretta
        halign: 'center'
        size_hint:1,.36
        font_size: self.width/18
        color:1,1,1,1
        font_name: 'font/myriadpro-bold.otf'
        background_color: .45,.51,.30,1
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                size: self.size
                pos: self.pos
    MDLabel:
        text: root.risposta
        size_hint:1,.36
        font_size: self.width/18
        halign: 'center'
        color:1,1,1,1
        font_name: 'font/myriadpro-bold.otf'
        background_color: .7,.3,.22,1
        canvas.before:
            Color:
                rgba: self.background_color
            Rectangle:
                size: self.size
                pos: self.pos




