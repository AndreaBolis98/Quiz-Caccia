<ElementCard>:
    id: ""
    md_bg_color: .2,.3,.23,1
    radius: [12,12,12,12]
    ##size_hint_Y:None
    orientation: 'vertical'
    image: ''
    text: ''
    index: 0
    on_press:
        self.change_bg()
    on_release:
        self.change_page(root.index)
    Widget:
        size_hint: 1,.2
        pos_hint: {'x':0, 'top':1}
    Image:
        source: root.image
        allow_stretch: True
        keep_ratio: True
        size_hint_y:.8
        pos_hint: {'center_x':.5, 'top':.8}
    MDLabel:
        halign: 'center'
        text:root.text
        font_size: self.height/5
        font_name: 'font/myriadpro-bold.otf'
        size_hint_x: .9
        pos_hint: {'center_x':.5, 'y':0}
        color: (1, 1, 1, 1)
        bold: True
