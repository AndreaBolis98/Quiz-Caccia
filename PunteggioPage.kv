<PunteggioPage>:
    name: 'punteggio'

    canvas:
        Color:
            rgba: .95,.92,.85,1
        Rectangle:
            pos: self.pos
            size: self.size
        ##Color:
        ##    rgba: .5,.52,.42,1
        ##RoundedRectangle:
        ##    size : self.width,self.height/7
        ##    pos : 0,self.height-self.height/7
        ##    radius:0,0,0,0

    MDLabel:
        id: esito
        font_size: self.height/1.6
        font_name: 'font/myriadpro-bold.otf'
        size_hint_y:0.14
        color: .99,.43,.23,1
        bold: True
        halign: 'center'
        pos_hint: {'center_x':.5,'top':1}

    #CORRETTE

    MDLabel:
        markup: True
        font_size: self.height
        id: num_corrette
        font_name: 'font/myriadpro-bold.otf'
        size_hint_y:0.035
        color: .45,.51,.30,1
        bold: True
        halign: 'left'
        pos_hint: {'x':.03,'top':0.82}

    MyProgressBar:
        id: corrette_bar
        color: .45,.51,.30,1
        size_hint:.75,.03
        pos_hint:{'x':.03,'center_y':.77}

    MDLabel:
        markup: True
        font_size: self.height
        id: perc_corrette
        font_name: 'font/myriadpro-bold.otf'
        size_hint_y:0.035
        color: .45,.51,.30,1
        bold: True
        halign: 'right'
        pos_hint: {'right':.97,'center_y':.77}

    #ERRATE
    MDLabel:
        markup: True
        font_size: self.height
        id: num_errate
        font_name: 'font/myriadpro-bold.otf'
        size_hint_y:0.035
        color: .7,.3,.22,1
        bold: True
        halign: 'left'
        pos_hint: {'x':.03,'top':0.73}

    MyProgressBar:
        id: errate_bar
        color: .7,.3,.22,1
        size_hint:.75,.03
        pos_hint:{'x':.03,'center_y':.68}

    MDLabel:
        markup: True
        font_size: self.height
        id: perc_errate
        font_name: 'font/myriadpro-bold.otf'
        size_hint_y:0.035
        color: .7,.3,.22,1
        bold: True
        halign: 'right'
        pos_hint: {'right':.97,'center_y':.68}

    #NON DATE
    MDLabel:
        markup: True
        font_size: self.height
        id: num_non_date
        font_name: 'font/myriadpro-bold.otf'
        size_hint_y:0.035
        color: .894,.627,.0627,1
        bold: True
        halign: 'left'
        pos_hint: {'x':.03,'top':0.64}

    MyProgressBar:
        id: non_date_bar
        color: .894,.627,.0627,1
        size_hint:.75,.03
        pos_hint:{'x':.03,'center_y':.59}

    MDLabel:
        markup: True
        font_size: self.height
        id: perc_non_date
        font_name: 'font/myriadpro-bold.otf'
        size_hint_y:0.035
        color: .894,.627,.0627,1
        bold: True
        halign: 'right'
        pos_hint: {'right':.97,'center_y':.59}

    ChooseMDCardNoImage:
        id: correzione
        text: 'CORREZIONE'
        pos_hint:{'center_x':.5,'top': .48}
        on_release:
            app.root.current='correzione'
            app.root.transition.direction= 'right'

    ChooseMDCardNoImage:
        id: nuovo_quiz
        text: 'NUOVO QUIZ'
        pos_hint:{'center_x':.5,'top': .28}
        on_release:
            app.root.current='choose'
            app.root.transition.direction= 'right'




<MyProgressBar@Widget>
    color: 1,1,1,1
    value: 0
    canvas:
        Color:
            rgba: 1,1,1,1
        Rectangle:
            pos: self.pos
            size: self.size
        Color:
            rgba: self.color
        Rectangle:
            pos: self.pos
            size: self.value,self.height






