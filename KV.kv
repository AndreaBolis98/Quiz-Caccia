ScreenManager:
    MainPage:
    ChooseRegion:
    HomePage:
    ChoosePage:
    DomandePage:
        id: domande_pagina
    PunteggioPage:
    CorrezionePage
        id: correzione_page
    AreaPersonalePage:
    StoricoErrori:

<SelTypeCard>
    id: ''
    md_bg_color: .95,.92,.85,0
    size_hint:0.8,0.15
    orientation: 'horizontal'
    color: .2,.3,.23,1
    elevation:0
    image: ''
    text: ''
    index: 0
    size_label: 0
    pos_hint:
    canvas.before:
        Color:
            rgba: self.color
        RoundedRectangle:
            size : self.size
            pos : self.pos
            radius: [(self.height/3.5,self.height/2), (self.height/3.5, self.height/2), (self.height/3.5, self.height/2), (self.height/3.5, self.height/2)]

    on_press: self.change_bg(root.index)
    on_release:
        self.select(root.index)
        app.root.transition.direction= 'left'
        app.root.current='choose'
    MDFloatLayout:
        id: box
        orientation: "horizontal"
        ##padding: 0,0, '24dp',0
        Image:
            source: root.image
            allow_stretch: True
            keep_ratio: True
            size_hint:.5,1
            pos_hint: {'center_x':.15, 'center_y':.5}
        MDLabel:
            text: root.text
            bold: True
            halign: 'center'
            size_hint: 1,1
            font_size: root.size_label
            font_name: 'font/myriadpro-bold.otf'
            color: (1,1,1,1)
            pos_hint: {'x':.1, 'center_y':.5}




<SmallIcon@MDCard>
    id: ''
    md_bg_color: .427,.498,.412,0
    elevation:0
    size_hint:0.2,0.2
    image:''
    pos_hint:
    Image:
        source: root.image
        allow_stretch: True
        keep_ratio: True
        size: self.size
        pos: self.pos


<ChooseMDCard>
    id: ''
    image: ''
    text: ''
    index: 0
    pos_hint:
    opacity: 1
    md_bg_color: .95,.92,.85,0
    size_hint:0.8,0.15
    orientation: 'horizontal'
    color: .2,.3,.23,1
    elevation:0
    canvas.before:
        Color:
            rgba: self.color
        RoundedRectangle:
            size : self.size
            pos : self.pos
            radius: [(self.height/4,self.height/2), (self.height/4, self.height/2), (self.height/4, self.height/2), (self.height/4, self.height/2)]

    on_press: self.change_bg()
    on_release: self.select(root.index)
    FloatLayout:

        Image:
            source: root.image
            allow_stretch: True
            keep_ratio: True
            size_hint:.75,.75
            pos_hint: {'center_x':.18, 'center_y':.5}
        MDLabel:
            text: root.text
            bold: True
            halign: 'center'
            size_hint: 1,1
            font_size: self.width/9
            font_name: 'font/myriadpro-bold.otf'
            color: (1,1,1,1)
            pos_hint: {'x':.1, 'center_y':.5}

<ChooseMDCardNoImage>
