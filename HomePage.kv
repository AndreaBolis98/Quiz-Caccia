<HomePage>:
    name: 'home'
    canvas:
        Color:
            rgba: .95,.92,.85,1
        Rectangle:
            pos: self.pos
            size: self.size
    MDLabel:
        text: "Seleziona una\nabilitazione venatoria"
        font_name: 'font/myriadpro-bold.otf'
        font_size: self.width/12
        size_hint: .95,.1
        halign: 'center'
        pos_hint: {'center_x':.5,'top':.92}
        color: .99,.43,.23,1
        bold: True

    SelTypeCard:
        id: card_cinghiale
        image: 'icone/cinghiale.png'
        text: 'CINGHIALE'
        size_label:self.width/12
        index: 1
        pos_hint: {'center_x':.5,'center_y':.60}

    SelTypeCard:
        id: card_penna
        image: 'icone/penna.png'
        text: 'VAGANTE E APPOSTAMENTO\nFISSO'
        index: 2
        size_label:self.width/12
        pos_hint: {'center_x':.5,'center_y':.35}

